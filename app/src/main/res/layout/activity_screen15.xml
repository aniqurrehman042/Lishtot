<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Screen15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/logo_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Payment Options"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:layout_marginLeft="@dimen/padding_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="0.3"
                android:outlineAmbientShadowColor="@color/light_blue"
                android:outlineSpotShadowColor="@color/light_blue"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:background="@color/light_blue"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/padding_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/light_blue">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_white"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly"
                        android:textSize="@dimen/text_super_normal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.99$ per month"
                        android:textSize="@dimen/_7ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.03"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="0.3"
                android:outlineAmbientShadowColor="@color/medium_blue"
                android:outlineSpotShadowColor="@color/medium_blue"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/medium_blue">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_white"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yearly"
                        android:textSize="@dimen/text_super_normal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.99$ for 12 months"
                        android:textSize="@dimen/_7ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.03"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="0.3"
                android:outlineAmbientShadowColor="@color/dark_blue"
                android:outlineSpotShadowColor="@color/dark_blue"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_marginRight="@dimen/padding_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/dark_blue">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_white"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plus"
                        android:textSize="@dimen/text_super_normal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34.99$ for 36 months"
                        android:textSize="@dimen/_7ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Form"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:layout_marginLeft="@dimen/padding_horizontal"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_10sdp">


                <RadioButton
                    android:id="@+id/rb_credit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:background="@drawable/selector_bg_bordered_blue_black"
                    android:text="Credit Card"
                    android:button="@drawable/selector_radio_blue_black"
                    android:textColor="@drawable/selector_color_blue_black"
                    android:paddingVertical="@dimen/_10sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"/>

                <RadioButton
                    android:id="@+id/rb_platform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:background="@drawable/selector_bg_bordered_blue_black"
                    android:text="Platform"
                    android:textColor="@drawable/selector_color_blue_black"
                    android:checked="false"
                    android:button="@drawable/selector_radio_blue_black"
                    android:paddingVertical="@dimen/_10sdp" />



            </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a Promo Code?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/padding_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Promo Here"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/padding_horizontal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn"
            android:layout_marginHorizontal="@dimen/padding_horizontal"
            android:text="PAY"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_round_blue" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>