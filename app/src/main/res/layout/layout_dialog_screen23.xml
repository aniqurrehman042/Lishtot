<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/padding_horizontal"
    android:layout_marginVertical="@dimen/padding_horizontal"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:outlineSpotShadowColor="#55000000"
    android:outlineAmbientShadowColor="#55000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_close_white"
            android:tint="@color/black"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Comment"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:layout_marginTop="@dimen/_30sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Water Source"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Container"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note (Optional)"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn"
            android:text="SUBMIT"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="@color/white"
            android:background="@drawable/bg_round_blue"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>