<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Screen13"
    android:paddingHorizontal="@dimen/padding_horizontal">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/logo_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_testing_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The testing result is highly dependent on the tester expe ise."
        android:textSize="@dimen/text_super_normal"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_use_testdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In order to learn how to use TestDrop Pro, please follow the following instructions."
        android:textSize="@dimen/text_super_normal"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_testing_result"
        android:layout_marginTop="@dimen/_30sdp" />

    <LinearLayout
        android:id="@+id/ll_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_50sdp">

        <Button
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="1"
            android:textColor="@color/white"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_10sdp" />

        <Button
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_circle_trans_blue"
            android:layout_marginVertical="@dimen/_10sdp"/>

        <Button
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_circle_trans_blue"
            android:layout_marginVertical="@dimen/_10sdp"/>

        <Button
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_circle_trans_blue"
            android:layout_marginVertical="@dimen/_10sdp"/>

        <Button
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_circle_trans_blue"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/bg_circle_blue"
        app:layout_constraintTop_toTopOf="@id/ll_pages"
        app:layout_constraintBottom_toBottomOf="@id/ll_pages"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_arrow_right_white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>